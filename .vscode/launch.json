    "version": "0.2.0",
    "configurations": [
        {
            "name": "App",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/bingosync-app",
            "program": "manage.py",
            "args": [
                "runserver"
            ],
            "django": true,
            "preLaunchTask": "django:migrate",
            "autoReload": {
                "enable": true
            },
            "presentation": {
                "hidden": false,
                "group": "Django",
                "order": 2
            },
        },
        {
            "name": "Websocket",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/bingosync-websocket",
            "program": "app.py",
            "autoReload": {
                "enable": true
            },
            "presentation": {
                "hidden": false,
                "group": "Django",
                "order": 3
            }
        },
    ],
    "compounds": [
      {
        "name": "App & Websocket",
        "configurations": ["App", "Websocket"],
        "stopAll": true,
        "presentation": {
            "hidden": false,
            "group": "Djnago",
            "order": 1
        }
      }
    ]
}